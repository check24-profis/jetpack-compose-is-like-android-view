    <TextView
        android:id="@+id/textview20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange_200"
        android:padding="10dp"
        android:text="Ten"
        android:textAlignment="center" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_vertical_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="textview11,textview12,textview13,textview14,textview15,textview16,textview17,textview18,textview19,textview20"
        app:flow_maxElementsWrap="5"
        app:flow_verticalGap="16dp"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toTopOf="@+id/flow_horizontal_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>